<li id="post-<%= li.id %>">
	<h3>
		<%= link_to li.title, {:controller => 'posts',
                               :action => 'edit',
                               :blog_slug => li.blog.slug,
                               :post_slug => li.slug} %>
		<span class="links">
			<%= link_to 'view', {:controller => 'posts',
                                 :action => 'show',
                                 :blog_slug => li.blog.slug,
                                 :post_slug => li.slug},
                        :class => 'admin-view' %>
			<%= link_to 'x', li, :confirm => 'Are you sure?', :method => :delete, :class => 'admin-delete' %>
		</span>
	</h3>
</li>